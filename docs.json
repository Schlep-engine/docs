{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Schlep-engine Documentation",
  "modeToggle": {
    "default": "light",
    "isHidden": false
  },
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "stylesheet": "/styles/custom.css",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "quickstart"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "core-concepts/architecture"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/environment-variables"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Inference",
            "pages": [
              "api/inference",
              "api/chat-completions"
            ]
          },
          {
            "group": "Monitoring",
            "pages": [
              "api/health",
              "api/models",
              "api/metrics",
              "api/provider-stats"
            ]
          },
          {
            "group": "Authentication",
            "pages": [
              "api/auth/login"
            ]
          },
          {
            "group": "Tenant Management",
            "pages": [
              "api/tenants/create"
            ]
          },
          {
            "group": "Key Vault (BYOK)",
            "pages": [
              "api/vault/store"
            ]
          }
        ]
      },
      {
        "tab": "Multi-Tenancy",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "multi-tenancy/overview"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/Schlep-engine/schlep-engine",
          "icon": "github"
        },
        {
          "anchor": "Community",
          "href": "https://github.com/Schlep-engine/schlep-engine/discussions",
          "icon": "comments"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/schlep-engine.svg",
    "dark": "/logo/schlep-engine.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/Schlep-engine/schlep-engine"
      }
    ]
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/Schlep-engine/schlep-engine"
    }
  }
}
